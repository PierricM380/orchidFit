{% extends "base.html.twig" %}

{% block title %}
{{ parent() }}
modifier structure
{% endblock %}

{% block body %}
<!-- HEADER -->
<header class="row my-4">
    <div class="col-12">
        <h1>Modification d'une structure</h1>
    </div>
</header>

<!-- MAIN -->
<main class="container-fluid">
    <div class="main_structure row d-flex">
        <div class="col-6 card shadow">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}

                <div class="form-error">
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div id="form-group">
                {{ form_row(form.users) }}
            </div>

            <div class="form-group">
                {{ form_label(form.postalAddress) }}
                {{ form_widget(form.postalAddress) }}

                <div class="form-error">
                    {{ form_errors(form.postalAddress) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.phoneNumber) }}
                {{ form_widget(form.phoneNumber) }}

                <div class="form-error">
                    {{ form_errors(form.phoneNumber) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}

                <div class="form-error">
                    {{ form_errors(form.description) }}
                </div>
            </div>

            <div class="form-group">
                <div class="form-check form-switch pt-2">
                    {{ form_row(form.isActive) }}
                </div>
            </div>

            {{ form_label(form.service) }}
            <br>
            <div id="ingredients-wrapper">
                {% for field in form.service %}
                <div style="min-width: 10%;">
                    {{ form_widget(field) }}
                    {{ form_label(field) }}
                </div>
                {% endfor %}
            </div>

            <div class="form-group">
                {{ form_row(form.submit) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</main>
{% endblock %}