{% extends "base.html.twig" %}

{% block title %}
{{ parent() }}
ajout structure
{% endblock %}

{% block body %}
<a href="{{ path('structure.index') }}" class="btn btn-danger shadow" id="return_btn">
    annuler
</a>

<!-- HEADER -->
<header class="row my-4">
    <div class="col-12">
        <h1>Ajout d'une structure</h1>
    </div>
</header>

<!-- MAIN -->
<main class="container-fluid">
    <div class="main_structure row">
        <div class="col-6 card shadow">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}

                <div class="form-error">
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div id="form-group">
                {{ form_row(form.users) }}
            </div>

            <div class="form-group">
                {{ form_label(form.postalAddress) }}
                {{ form_widget(form.postalAddress) }}

                <div class="form-error">
                    {{ form_errors(form.postalAddress) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.phoneNumber) }}
                {{ form_widget(form.phoneNumber) }}

                <div class="form-error">
                    {{ form_errors(form.phoneNumber) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}

                <div class="form-error">
                    {{ form_errors(form.description) }}
                </div>
            </div>

            <div class="form-group">
                <div class="form-check form-switch pt-2">
                    {{ form_row(form.isActive) }}
                </div>
            </div>

            <div class="form-group">
               {{ form_row(form.service) }}
            </div>

            <div class="form-group">
                {{ form_row(form.submit) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</main>
{% endblock %}