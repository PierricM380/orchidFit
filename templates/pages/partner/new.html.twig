{% extends "base.html.twig" %}

{% block title %}
{{ parent() }}
ajout partenaire
{% endblock %}

{% block body %}
<!-- HEADER -->
<header class="row mt-4">
    <div class="col-12 d-flex justify-content-center">
        <h1>Ajout d'un partenaire</h1>
    </div>
</header>

<!-- MAIN -->
<main class="container-fluid">
    <div class="row d-flex justify-content-center mt-4">
        <div class="col-6 card text-white bg-secondary p-3">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}

                <div class="form-error">
                    {{ form_errors(form.name) }}
                </div>
            </div>

            {{ form_label(form.users) }}
            <br>
            
            <div id="users-wrapper">
                {% for field in form.users %}
                <div style="min-width: 10%;">
                    {{ form_widget(field) }}
                    {{ form_label(field) }}
                </div>
                {% endfor %}
            </div>

            <div class="form-group">
                {{ form_label(form.postalAddress) }}
                {{ form_widget(form.postalAddress) }}

                <div class="form-error">
                    {{ form_errors(form.postalAddress) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.phoneNumber) }}
                {{ form_widget(form.phoneNumber) }}

                <div class="form-error">
                    {{ form_errors(form.phoneNumber) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}

                <div class="form-error">
                    {{ form_errors(form.description) }}
                </div>
            </div>

            <div class="form-group">
                <div class="form-check form-switch pt-2">
                    {{ form_row(form.isActive) }}
                </div>
            </div>

            {{ form_label(form.structure) }}
            <br>
            <div id="structures-wrapper">
                {% for field in form.structure %}
                <div style="min-width: 10%;">
                    {{ form_widget(field) }}
                    {{ form_label(field) }}
                </div>
                {% endfor %}
            </div>


            <div class="form-group">
                {{ form_row(form.submit) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</main>
{% endblock %}