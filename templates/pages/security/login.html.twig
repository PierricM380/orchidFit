{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} connexion
{% endblock %}

{% block body %}
<!-- HEADER -->
<header class="row">
    <div class="col-12">
        <h1>Orchid'Fit</h1>
    </div>
</header>

<!-- MAIN -->
<main class="container-fluid">
    <div class="main_login row">
        <!-- Login form -->
        <div class="col-11 col-lg-4">
            <!-- Alert message -->
            {% if error %}
            <div class="alert alert-dismissible alert-warning">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <p class="mb-0">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            </div>
            {% endif %}
            <div class="card shadow">
                <div class="card-body">
                    <form action="{{ path('security.login') }}" method="post" name="login">
                        <div class="form-group">
                            <label for="username" class="form-label">Adresse email</label>
                            <input type="email" class="form-control" id="username" name="_username" placeholder="exemple@exemple.fr" value="{{ last_username }}">
                        </div>
                        <div class=" form-group">
                            <label for="password" class="form-label mt-2">Mot de passe</label>
                            <input type="password" class="form-control" id="password" name="_password" placeholder="********">
                        </div>

                        <button type="submit" class="btn btn-sm btn-success mt-4 shadow">
                            Se connecter
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}