{% extends "base.html.twig" %}

{% block title %}
{{ parent() }} modifier mot de passe
{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- HEADER -->
    <header class="row">
        <div class="col-12">
            <h1>Modification du mot de passe</h1>
        </div>
    </header>
    <!-- MAIN -->
    <main class="main_user row">
        <div class="col-4 card bg-secondary">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.plainPassword) }}

                    <div class="form-error">
                        {{ form_errors(form.plainPassword) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_row(form.newPassword) }}

                    <div class="form-error">
                        {{ form_errors(form.newPassword) }}
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class='btn btn-sm btn-success'>Valider</button>
                <a href="{{ path('home.index') }}" class="btn btn-sm btn-danger shadow">
                    Annuler
                </a>
                {{ form_end(form) }}
            </div>
        </div>
    </main>
</div>
{% endblock %}